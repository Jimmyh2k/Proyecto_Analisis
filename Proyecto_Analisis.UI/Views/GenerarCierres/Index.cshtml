@model Proyecto_Analisis.Model.CierresFacturas

@{
    ViewData["Title"] = "Index";
}

<h1>Generar cierres</h1>

<div>
    <h4>CierresFacturas</h4>
    <hr />
    @foreach (var item in Model.facturas)
    {

        <p class="card-text">
            <ul class="list-group">
                <li class="list-group-item active">
                    <h5>Nombre comercial:</h5>
                    @item.NombreComercial
                </li>
                <li class="list-group-item">
                    <h5>Fecha de emisión:</h5>
                    @item.FechaEmision
                </li>
                <li class="list-group-item">
                    <h5>Monto total:</h5>
                    @item.MontoTotal
                </li>
                <li class="list-group-item">
                    <a asp-action="Detalles" asp-route-ID_Factura="@item.CodigoFactura">Detalles</a> |
                </li>
            </ul>
        </p>

    }
    <hr />
    <div class="card text-white bg-info mb-3" style="max-width: 80rem;">
        <div class="card-header">
        <h4>Monto total de facturas</h4>
        </div>
        <div class="card-body">
            <h4 class="card-title">@Html.DisplayFor(model => model.montoTotal)</h4>
        </div>
    </div>
</div>
