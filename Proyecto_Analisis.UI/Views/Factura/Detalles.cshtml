@model Proyecto_Analisis.Model.FacturaDetallada

@{
    ViewData["Title"] = "Detalles";
}

<h1>Detalles</h1>

<div>
    <h4>Factura detallada</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FechaEmision)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FechaEmision)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NombreComercial)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NombreComercial)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MontoTotal)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MontoTotal)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cliente.CorreoElectronico)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cliente.CorreoElectronico)
        </dd>

    </dl>
</div>

<div>
    <h4>Productos asociados a esta factura</h4>
    <hr />
    <br />
    @foreach (var item in Model.ListaDeProductos)
    {
        <p class="card-text">
            <h5>Nombre:</h5>
            @item.Nombre
            <h5>Precio:</h5>
            @item.PrecioUnitario

        </p>
    }

</div>

<div>
    @Html.ActionLink("Edit", "Edit", new { /* id = Model.PrimaryKey */ }) 
    <a asp-action="FacturasFinalizadas">Regresar a la lista</a>
</div>
